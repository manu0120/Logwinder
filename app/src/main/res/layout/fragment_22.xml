<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Fragment22">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:textSize="18dp"
        android:padding="16dp"
        android:text="¿Que clase energética tiene tu lavavajillas? "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        >

        <RadioButton
            android:id="@+id/lavavajillasA3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A+++"

            />

        <RadioButton
            android:id="@+id/lavavajillasA2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="A++"

            />

        <RadioButton
            android:id="@+id/lavavajillasA1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A+"

            />

        <RadioButton
            android:id="@+id/lavavajillasA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"

            />

        <RadioButton
            android:id="@+id/lavavajillasB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"

            />

        <RadioButton
            android:id="@+id/lavavajillasC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"

            />

    </RadioGroup>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_info2"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/secondaryColor"

        />

    <ImageView
        android:id="@+id/ivFragment22"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup22"

        android:src="@drawable/imglavavajillas"
        />


</androidx.constraintlayout.widget.ConstraintLayout>