<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Fragment5">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:textSize="18dp"
        android:padding="16dp"
        android:text="Â¿Que tipo de vitroceramica utilizas? "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup15"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1"

        >
        <!--        android:gravity="center"-->
        <RadioButton
            android:id="@+id/vitroRad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vitroceramica radiante (convencional)"

            />

        <RadioButton
            android:id="@+id/vitroEle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Resistencia electrica"

            />

        <RadioButton
            android:id="@+id/vitroInd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Induccion"

            />


    </RadioGroup>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_info2"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/secondaryColor"

        />

    <ImageView
        android:id="@+id/ivFragment15"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:src="@drawable/imgvitroceramica"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup15" />


</androidx.constraintlayout.widget.ConstraintLayout>